<div class="standard-form">
    <div class="form-group">
        <label class="flex1" style="min-width:80px; max-width:200px;">{{localize "CUSTOM_DND5E.enableConfiguration"}}</label>
        <div class="form-fields">
            <dnd5e-checkbox id="custom-dnd5e-enable-config" name="enableConfig"{{#if (ne enableConfig false)}} checked{{/if}}></dnd5e-checkbox>
        </div>
    </div>
    <hr>
    <div class="standard-form scrollable">
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.configuration"}}</legend>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.status"}}</label>
                <div class="form-fields">
                    <select id="custom-dnd5e-bloodied-status" name="bloodiedStatus">
                        {{selectOptions selects.status.choices selected=bloodiedStatus localize=true}}
                    </select>
                </div>
                <p class="hint">{{localize "SETTINGS.DND5E.BLOODIED.Hint"}}</p>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.name"}}</label>
                <div class="form-fields">
                        <input id="custom-dnd5e-bloodied-name" name="name" type="text" value="{{localize name}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.icon"}}</label>
                <div class="form-fields">
                    <file-picker id="custom-dnd5e-bloodied-icon" name="img" type="image" value="{{localize img}}"></file-picker>
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.threshold"}}</label>
                <div class="form-fields">
                    <range-picker id="custom-dnd5e-bloodied-threshold" name="threshold" value="{{threshold}}" min="0.05" max="1" step="0.05"></range-picker>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.override"}}</legend>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.form.bloodied.applyBloodied.label"}}</label>
                <div class="form-fields">
                    <dnd5e-checkbox id="custom-dnd5e-apply-bloodied" name="applyBloodied"{{#if applyBloodied}} checked{{/if}}></dnd5e-checkbox>
                </div>
                <p class="hint">{{localize "CUSTOM_DND5E.form.bloodied.applyBloodied.note1"}}</p>
                <p class="custom-dnd5e-warning notes">{{localize "CUSTOM_DND5E.form.bloodied.applyBloodied.note2"}}</p>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.form.bloodied.removeBloodiedOnDead.label"}}</label>
                <div class="form-fields">
                    <dnd5e-checkbox id="custom-dnd5e-remove-bloodied-on-dead" name="removeBloodiedOnDead"{{#if removeBloodiedOnDead}} checked{{/if}}></dnd5e-checkbox>
                </div>
                <p class="hint">{{localize "CUSTOM_DND5E.form.bloodied.removeBloodiedOnDead.note"}}</p>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.other"}}</legend>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.tint"}}</label>
                <div class="form-fields">
                    <color-picker  id="custom-dnd5e-bloodied-tint" name="bloodiedTint" value="{{bloodiedTint}}"></color-picker>
                </div>
                <p class="hint">{{localize "CUSTOM_DND5E.form.bloodied.bloodiedTint.note.1"}}</p>
                <p class="custom-dnd5e-advice notes">{{localize "CUSTOM_DND5E.form.bloodied.bloodiedTint.note.2"}}</p>
            </div>
        </fieldset>
    </div>
    <footer class="form-footer" data-application-part="footer">
        <button type="button" data-action="reset" class="reset-button bright">
            <i class="fas fa-arrow-rotate-left"></i>{{localize "CUSTOM_DND5E.form.button.reset.label"}}
        </button>
        <button type="submit" class="save-button">
            <i class="fas fa-solid fa-floppy-disk"></i>{{localize "CUSTOM_DND5E.form.button.save.label"}}
        </button>
    </footer>
</div>
