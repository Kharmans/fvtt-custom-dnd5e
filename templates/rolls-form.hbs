<div class="standard-form">
    <div class="standard-form scrollable">
        <nav class="sheet-tabs tabs" style="flex: none;">
            <a class="item active" data-action="tab" data-group="primary" data-tab="coreRolls">
                <span>
                    <i class="fa-solid fa-dice-d20"></i>
                    {{localize "CUSTOM_DND5E.coreRolls"}}
                </span>
            </a>
            <a class="item" data-action="tab" data-group="primary" data-tab="weaponTypes">
                <span>
                    <i class="fa-solid fa-sword"></i>
                    {{localize "CUSTOM_DND5E.weaponTypes"}}
                </span>
            </a>
        </nav>
        <section class="tab active" data-group="primary" data-tab="coreRolls">
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.abilityCheck"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-ability-die" name="rolls.ability.die" type="text" value="{{rolls.ability.die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-ability-roll-mode" name="rolls.ability.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.ability.rollMode localize=true}}
                        </select>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.attackRoll"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-attack-die" name="rolls.attack.die" type="text" value="{{rolls.attack.die}}"> 
