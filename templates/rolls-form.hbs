                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-initiative-die" name="rolls.initiative.die" type="text" value="{{rolls.initiative.die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-initiative-roll-mode" name="rolls.initiative.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.initiative.rollMode localize=true}}
                        </select> 
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.savingThrow"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-saving-throw-die" name="rolls.savingThrow.die" type="text" value="{{rolls.savingThrow.die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-saving-throw-roll-mode" name="rolls.savingThrow.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.savingThrow.rollMode localize=true}}
                        </select> 
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.skillCheck"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-skill-die" name="rolls.skill.die" type="text" value="{{rolls.skill.die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-skill-roll-mode" name="rolls.skill.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.skill.rollMode localize=true}}
                        </select>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.toolCheck"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-tool-die" name="rolls.tool.die" type="text" value="{{rolls.tool.die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-tool-roll-mode" name="rolls.tool.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.tool.rollMode localize=true}}
                        </select>
                    </div>
                </div>
            </fieldset>
        </section>
        <section class="tab" data-group="primary" data-tab="weaponTypes">
            {{#each rolls.weaponTypes as |weaponType key|}}
            <fieldset>
                <legend>{{label}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-die" name="rolls.weaponTypes.{{key}}.die" type="text" value="{{die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-roll-mode" name="rolls.weaponTypes.{{key}}.rollMode">
                            {{selectOptions ../selects.rollMode.choices selected=rollMode localize=true}}
                        </select>
                    </div>
                </div>
            </fieldset>
            {{/each}}
        </section>  
    </div>
    <footer class="form-footer" data-application-part="footer">
        <button type="submit" class="save-button">
            <i class="fas fa-solid fa-floppy-disk"></i>{{localize "CUSTOM_DND5E.form.button.save.label"}}
        </button>
    </footer>
</div>
