                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-attack-roll-mode" name="rolls.attack.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.attack.rollMode localize=true}}
                        </select>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.concentrationSavingThrow"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.die"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-rolls-concentration-die" name="rolls.concentration.die" type="text" value="{{rolls.concentration.die}}"> 
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.rollMode"}}</label>
                    <div class="form-fields">
                        <select id="custom-dnd5e-rolls-concentration-roll-mode" name="rolls.concentration.rollMode">
                            {{selectOptions selects.rollMode.choices selected=rolls.concentration.rollMode localize=true}}
                        </select>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "CUSTOM_DND5E.initiativeRoll"}}</legend>
