<div class="standard-form">
    <div class="form-group">
        <label class="flex1" style="min-width:80px; max-width:200px;">{{localize "CUSTOM_DND5E.enableConfiguration"}}</label>
        <div class="form-fields">
            <dnd5e-checkbox id="custom-dnd5e-enable-config" name="enableConfig"{{#if (ne enableConfig false)}} checked{{/if}}></dnd5e-checkbox>
        </div>
    </div>
    <hr>
    <div class="standard-form scrollable">
        <fieldset>
            <legend>{{localize "DND5E.Effects"}}</legend>
            <fieldset>
                <legend>{{localize "EFFECT.DND5E.StatusEncumbered"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.label"}}</label>
                    <div class="form-fields">
                            <input id="custom-dnd5e-effects-encumbered-name" name="effects.encumbered.name" type="text" value="{{localize effects.encumbered.name}}">
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.icon"}}</label>
                    <div class="form-fields">
                        <file-picker id="custom-dnd5e-effects-encumbered-image" name="effects.encumbered.img" type="image" value="{{localize effects.encumbered.img}}"></file-picker>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "EFFECT.DND5E.StatusHeavilyEncumbered"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.label"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-effects-heavily-encumbered-name" name="effects.heavilyEncumbered.name" type="text" value="{{localize effects.heavilyEncumbered.name}}">
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.icon"}}</label>
                    <div class="form-fields">
                        <file-picker id="custom-dnd5e-effects-heavily-encumbered-image" name="effects.heavilyEncumbered.img" type="image" value="{{localize effects.heavilyEncumbered.img}}"></file-picker>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>{{localize "EFFECT.DND5E.StatusExceedingCarryingCapacity"}}</legend>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.label"}}</label>
                    <div class="form-fields">
                        <input id="custom-dnd5e-effects-exceeding-carrying-capacity-name" name="effects.exceedingCarryingCapacity.name" type="text" value="{{localize effects.exceedingCarryingCapacity.name}}">
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "CUSTOM_DND5E.icon"}}</label>
                    <div class="form-fields">
                        <file-picker id="custom-dnd5e-effects-exceeding-carrying-capacity-image" name="effects.exceedingCarryingCapacity.img" type="image" value="{{localize effects.exceedingCarryingCapacity.img}}"></file-picker>
                    </div>
                </div>
            </fieldset>
        </fieldset>
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.thresholds"}}</legend>
            <div class="form-group">
                <label>{{localize "EFFECT.DND5E.StatusEncumbered"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-threshold-encumbered" name="threshold.encumbered.{{#if metric}}metric{{else}}imperial{{/if}}" type="number" value="{{#if metric}}{{threshold.encumbered.metric}}{{else}}{{threshold.encumbered.imperial}}{{/if}}"> 
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "EFFECT.DND5E.StatusHeavilyEncumbered"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-threshold-heavily-encumbered" name="threshold.heavilyEncumbered.{{#if metric}}metric{{else}}imperial{{/if}}" type="number" value="{{#if metric}}{{threshold.heavilyEncumbered.metric}}{{else}}{{threshold.heavilyEncumbered.imperial}}{{/if}}"> 
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.maximum"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-threshold-maximum" name="threshold.maximum.{{#if metric}}metric{{else}}imperial{{/if}}" type="number" value="{{#if metric}}{{threshold.maximum.metric}}{{else}}{{threshold.maximum.imperial}}{{/if}}"> 
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.speedReduction"}}</legend>
            <div class="form-group">
                <label>{{localize "EFFECT.DND5E.StatusEncumbered"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-speed-reduction-encumbered" name="speedReduction.encumbered.{{#if metric}}m{{else}}ft{{/if}}" type="number" value="{{#if metric}}{{speedReduction.encumbered.m}}{{else}}{{speedReduction.encumbered.ft}}{{/if}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "EFFECT.DND5E.StatusHeavilyEncumbered"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-speed-reduction-heavily-encumbered" name="speedReduction.heavilyEncumbered.{{#if metric}}m{{else}}ft{{/if}}" type="number" value="{{#if metric}}{{speedReduction.heavilyEncumbered.m}}{{else}}{{speedReduction.heavilyEncumbered.ft}}{{/if}}"> 
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "EFFECT.DND5E.StatusExceedingCarryingCapacity"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-speed-reduction-exceeding-carrying-capacity" name="speedReduction.exceedingCarryingCapacity.{{#if metric}}m{{else}}ft{{/if}}" type="number" value="{{#if metric}}{{speedReduction.exceedingCarryingCapacity.m}}{{else}}{{speedReduction.exceedingCarryingCapacity.ft}}{{/if}}"> 
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.currencyPerWeight"}}</legend>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.currencyPerWeight"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-currency-per-weight" name="currencyPerWeight.{{#if metric}}metric{{else}}imperial{{/if}}" type="number" value="{{#if metric}}{{currencyPerWeight.metric}}{{else}}{{currencyPerWeight.imperial}}{{/if}}"> 
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>{{localize "CUSTOM_DND5E.weightModifiers.label"}}</legend>
            <p>{{localize "CUSTOM_DND5E.weightModifiers.note.1"}}</p>
            <p class="custom-dnd5e-advice notes">{{localize "CUSTOM_DND5E.weightModifiers.note.2"}}</p>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.equippedItemWeightModifier"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-equipped-item-weight-modifier" name="equippedItemWeightModifier" type="number" step="0.01" value="{{equippedItemWeightModifier}}"> 
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.proficientEquippedItemWeightModifier"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-proficient-equipped-item-weight-modifier" name="proficientEquippedItemWeightModifier" type="number" step="0.01" value="{{proficientEquippedItemWeightModifier}}"> 
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "CUSTOM_DND5E.unequippedItemWeightModifier"}}</label>
                <div class="form-fields">
                    <input id="custom-dnd5e-unequipped-item-weight-modifier" name="unequippedItemWeightModifier" type="number" step="0.01" value="{{unequippedItemWeightModifier}}"> 
                </div>
            </div>
        </fieldset>
    </div>
    <footer class="form-footer" data-application-part="footer">
        <button type="button" data-action="reset" class="reset-button bright">
            <i class="fas fa-arrow-rotate-left"></i>{{localize "CUSTOM_DND5E.form.button.reset.label"}}
        </button>
        <button type="submit" class="save-button">
            <i class="fas fa-solid fa-floppy-disk"></i>{{localize "CUSTOM_DND5E.form.button.save.label"}}
        </button>
    </footer>
</div>
